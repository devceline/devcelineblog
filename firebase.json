{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build",
		"source": "functions"
  },
  "hosting": {
    "public": "blogBuild",
		"rewrites": [
			"source": "**",
			"function": "blogServeFunction"
		],
		"predeploy": ["yarn build"],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
